{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/__/auth/handler",
        "destination": "/__/auth/handler"
      },
      {
        "source": "/",
        "destination": "/main/main.html"
      },
      {
        "source": "**",
        "destination": "/main/main.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}